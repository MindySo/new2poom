/*
 * Jenkins Pipeline - Frontend (React/Vue/etc)
 * Triggers: Changes in frontend/ directory on dev branch
 */
pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = 'mindyso'
        IMAGE_NAME = 'topoom-nginx'
        IMAGE_TAG = 'latest'
        COMPOSE_DIR = 'infra'
    }

    options {
        skipDefaultCheckout()
        timestamps()
    }

    stages {

        /* -------------------------------------------------- */
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/dev']],
                    userRemoteConfigs: [[
                        url: 'https://lab.ssafy.com/s13-final/S13P31A706',
                        credentialsId: 'gitlab-jenkins-token'
                    ]]
                ])
            }
        }

        /* -------------------------------------------------- */
        stage('Check Changes') {
            steps {
                script {
                    def changes = sh(
                        script: 'git diff --name-only HEAD~1 HEAD || echo "frontend/"',
                        returnStdout: true
                    ).trim()

                    if (!changes.contains('frontend/') && !changes.contains('infra/nginx/')) {
                        currentBuild.result = 'NOT_BUILT'
                        error('No changes in frontend/ or infra/nginx/ - skipping build')
                    }
                    echo "Frontend changes detected: proceeding with build"
                }
            }
        }

        /* -------------------------------------------------- */
        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS')]) {

                    sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                }
            }
        }

        /* -------------------------------------------------- */
        stage('Build Frontend') {
            steps {
                dir('frontend/poom') {
                    sh '''
                        npm ci
                        npm run build
                    '''
                }
            }
        }

        stage('Build & Push Nginx Image') {
            steps {
                dir('infra/nginx') {
                    sh """
                        # 빌드 결과물 복사
                        cp -r ../../frontend/poom/dist/* ./frontend/

                        docker build -t ${DOCKER_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} .
                        docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }

        /* -------------------------------------------------- */
        stage('Build & Push Nginx Image') {
            steps {
                dir('infra/nginx') {
                    sh """
                        # 프론트엔드 빌드 결과물이 있다면 복사
                        # cp -r ../../frontend/dist ./frontend 2>/dev/null || true

                        docker build -t ${DOCKER_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} .
                        docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }

        /* -------------------------------------------------- */
        stage('Deploy Nginx Container') {
            steps {
                withCredentials([file(credentialsId: 'env', variable: 'ENV_FILE')]) {
                    sh """
                        cp "\$ENV_FILE" "${COMPOSE_DIR}/.env"

                        cd ${COMPOSE_DIR}

                        # Rolling Update
                        echo "새 이미지 다운로드 중..."
                        docker compose pull nginx

                        echo "Nginx 컨테이너 Rolling Update 시작..."
                        docker compose up -d --no-deps nginx

                        # 헬스체크 (최대 30초 대기)
                        echo "헬스체크 시작..."
                        for i in {1..15}; do
                            if curl -f http://localhost:80 >/dev/null 2>&1; then
                                echo "Nginx 서버 정상 실행 중"
                                break
                            fi
                            echo "대기 중... (\$i/15)"
                            sleep 2
                        done

                        # 최종 헬스체크
                        curl -f http://localhost:80 || {
                            echo "헬스체크 실패 - 배포 중단"
                            exit 1
                        }
                    """
                }
            }
        }
    }

    /* ------------------------------------------------------ */
    post {
        success {
            echo '✅ Frontend/Nginx 배포 성공'
        }
        failure {
            echo '❌ Frontend/Nginx 배포 실패 — 콘솔 로그 확인'
        }
        notBuilt {
            echo '⏭️  Frontend 변경사항 없음 - 빌드 스킵'
        }
        always {
            cleanWs(deleteDirs: true, disableDeferredWipeout: true)
        }
    }
}
